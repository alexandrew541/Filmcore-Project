CREATE TABLE users(
    userID bigint GENERATED BY DEFAULT AS IDENTITY 
    (START WITH 1 INCREMENT BY 1)PRIMARY KEY,
    username varchar(20) NOT NULL,
    pwd varchar(120) NOT NULL,
    email varchar(60) NOT NULL, 
    firstname varchar(20) NOT NULL,
    lastname varchar(30) NOT NULL
);


CREATE TABLE watchlist(
    watchlistID bigint GENERATED BY DEFAULT AS IDENTITY 
    (START WITH 1 INCREMENT BY 1)PRIMARY KEY,
    movieID varchar(20) NOT NULL,
    movieName varchar(80) NOT NULL,
    movieImage varchar(1000) NOT NULL,
    movieType varchar(20) NOT NULL,
    movieYear varchar(20) NOT NULL,
    usersID bigint NOT NULL,
    FOREIGN KEY (usersID) REFERENCES users(userID)
);